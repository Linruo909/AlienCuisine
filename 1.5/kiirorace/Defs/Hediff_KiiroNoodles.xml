<Defs>
	<!-- 绮罗方便面效果 -->
    <HediffDef MayRequire="ancot.kiirorace">
        <defName>AC_KiiroNoodlesBuff</defName>
        <label>绮罗方便面效果</label>
        <description>食用绮罗方便面后，生活质量将会提高。</description>
        <tendable>false</tendable>
        <isBad>false</isBad>
        <defaultLabelColor>(220,180,60)</defaultLabelColor>
        <hediffClass>HediffWithComps</hediffClass>
        <initialSeverity>1.0</initialSeverity>
        <maxSeverity>1.0</maxSeverity>
        <comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.25</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
        </comps>
		<stages>
			<li>
				<statOffsets>
					<RestRateMultiplier>0.5</RestRateMultiplier>
					<EatingSpeed>0.5</EatingSpeed>
					
				</statOffsets>
				<statFactors>
					<MentalBreakThreshold>0.8</MentalBreakThreshold>
				</statFactors>
			</li>
		</stages>
    </HediffDef>
	
</Defs>